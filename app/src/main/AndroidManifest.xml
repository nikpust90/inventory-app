<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.inventory_app">

    <!-- Разрешение на использование камеры -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Разрешение на использование интернета -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Разрешение на чтение/запись во внешнее хранилище (если необходимо) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:icon="@drawable/ic_launcher"
            android:roundIcon="@drawable/ic_launcher_round"
            android:allowBackup="true"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/Theme.InventoryApp">

        <activity
                android:name=".MainActivity"
                android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".InventoryActivity"
                android:exported="false"/>

        <activity
                android:name=".OutgoingDocumentActivity"
                android:exported="false"/>

        <!-- Добавляем BroadcastReceiver для сканера -->
        <receiver android:name=".BarcodeReceiver"
                  android:exported="false">
            <intent-filter>
                <action android:name="com.xcheng.scanner.action.BARCODE_DECODING_BROADCAST" /> <!-- Проверьте правильный action -->
            </intent-filter>
        </receiver>

    </application>

</manifest>
